<% if action_name == "home" %>

  <div class="upload-page">
    <h2>Good <%= @greeting %>, <%= image_tag "spotify_icon.png" %><%= @user.name %>!</h2>
    <h4>Let's find you something to listen to.</h4>

    <div class="upload-box">
      <h4>Upload your video selfie</h4>
      <p>Accepted file formats: AVI, MOV, MP4, MPG, WMV</p>
      <p>(Video must be between 10-20 seconds long)</p>

      <%= form_tag(upload_path, multipart: true) do %>
        <div class="form-group">
            <%= file_field_tag :video %>

            <%= submit_tag 'Upload', class: "btn btn-default" %>
          </div>
      <% end %>

      <%= link_to "Dev Test Button", upload_path, method: "post" %>
      <br>
      <%= link_to "Not you? Sign out", signout_path %>
    </div>
    <hr class="upload-hr">
    <h3 class="logo">music selfie</h3>
  </div>

<% end %>

 <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

<% if action_name == "upload" %>

  <div class="playlist-page">
    <% if flash[:error] %>
      <h3><%= flash[:error] %></h3>
    <% end %>

    <div class="emotions">
      <%= @emotions_percents_hash.each do |emotion, percent| %>
        <div id="<%= emotion %>"><span><%= percent %></span><h6 class="emo-tag"><%= emotion %></h6></div>
      <% end %>
    </div>

    <h1>Check out your <span class="logo">music selfie</span></h1>

    <iframe src="https://embed.spotify.com/?uri=<%= @playlist_uri %>" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>

    <br>
    <div class="show-colors btn btn-default">Show Emotion Colors</div>

    <%= link_to "Upload Another Selfie", home_path , class: "btn btn-default" %>
  </div>

<% end %>