<div class="playlist-page">
  <% if flash[:error] %>
    <h3><%= flash[:error] %></h3>
  <% end %>

  <div class="emotions">
    <% @emotions_percents_hash.each do |emotion, percent| %>
      <div id="<%= emotion %>"><span><%= percent %>%</span><h6 class="emo-tag"><%= emotion %></h6></div>
    <% end %>
  </div>

  <h1>Check out your <span class="logo">music selfie</span></h1>

  <iframe src="https://embed.spotify.com/?uri=<%= @playlist_uri %>" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>

  <br>
  <div class="show-colors btn btn-default">Show Emotion Colors</div>

  <%= link_to "Upload Another Selfie", selfie_path , class: "btn btn-default" %>
</div>